<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>    
    
 <div class="container-full">
    
<!-- Content Header (Page header) -->
<div class="content-header">
	<div class="d-flex align-items-center">
		<div class="me-auto">
				<h3 class="page-title"><a href="/ananyBoard">대나무 숲</a></h3>
				<div class="d-inline-block align-items-center">
					<nav>
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="/DYUniv/ananyBoard"><i
									class="mdi mdi-home-outline"></i>게시판 사용</a></li>
							<li class="breadcrumb-item" aria-current="page">대나무 숲 </li>
						</ol>
					</nav>
				</div>
		</div>

	</div>
</div>
<section class="content">
		<div class="row" >
			<div class="col-lg-12">
				<div class="box">
					<div class="box-body">
					<div class="app-menu" style="display: flex; justify-content: flex-end;">
				<div class="search-bx mx-5 col-md-4">
					<form id="searchForm" action="" method="get">
									<div class="lookup lookup-circle lookup-right">
										<select id="searchType" name="searchType" class="">
											<option value="anonBrdTitle" selected>제목</option>
											<option value="anonBrdCont" selected>제목</option>
										</select> 
										<input type="text" id="searchWord" name="searchWord"  value="${searchWord}" placeholder="" >
										<input type="hidden" id="page" name="page" >
									</div>
								</form>
				</div>
			</div>
						<h4 class="box-title"></h4>
						<div class="table-responsive">
							<table class="table">
								<thead class="bg-primary">
									<tr>
										<th>순번</th>
										<th>제목</th>
										<th>날짜</th>
										<th>조회수</th>
									</tr>
								</thead>
								<c:set value="${pagingVO.dataList }" var="anonyList" />
								<c:choose>
									<c:when test="${empty boardList }">
										<tr>
											<td colspan="5">조회하신 게시글이 존재하지 않습니다...</td>
										</tr>
									</c:when>
									<c:otherwise>
										<c:forEach items="${boardList }" var="anonyVO">
											<tr>
												<td>${anonyVO.anonBrdNo}</td>
												<td>
													<a href="/DYUniv/anonymousDetail.do?anonBrdNo=${anonyVO.anonBrdNo }">${anonyVO.anonBrdTitle}</a> <!--보드디테일  -->
												</td>
												<td>${anonyVO.anonWriteDate}</td>
												<td>${anonyVO.anonHitCount}</td>
											</tr>
										</c:forEach>
									</c:otherwise>
								</c:choose>
								
							</table>
					 		<button type="button" class="waves-effect waves-light btn btn-primary mb-5" id="listBtn">등록</button>
						</div>
					</div>
				</div>
			</div>
			
				<div class="row">
			<div class="col-12 text-end">
				<div class="col-sm-12 col-md-6"
							style="float: right; margin-right: 80px">
							<div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
								${pagingVO.pagingHTML }
							</div>
						</div>
				<div>
					<p>
						<%-- 총인원 : <span class="text-danger"> ${totalRecord } </span>명 --%>
						
					</p>
				</div>

			</div>
			
			<!-- /.col -->
		</div>
