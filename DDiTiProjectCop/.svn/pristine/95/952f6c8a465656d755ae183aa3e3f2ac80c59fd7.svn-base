package kr.or.ddit.service.impl;

import java.io.File;
import java.util.List;
import java.util.Map;

import javax.inject.Inject;

import org.springframework.stereotype.Service;

import kr.or.ddit.excel.ExcelRead;
import kr.or.ddit.excel.ExcelReadOption;
import kr.or.ddit.mapper.IExcelMapper;
import kr.or.ddit.service.IExcelService;
import kr.or.ddit.vo.ExcelVO;

@Service
public class ExcelServiceImpl implements IExcelService {
	
	@Inject
	private IExcelMapper excelMapper;

	
	
	// 엑셀 업로드
    @Override
    public void excelUpload(File destFile) throws Exception {
    	excelMapper.delete();
    	
    	
        ExcelReadOption excelReadOption = new ExcelReadOption();
        excelReadOption.setFilePath(destFile.getAbsolutePath()); //파일경로 추가
        excelReadOption.setOutputColumns("A", "B", "C", "D"); //추출할 컬럼명 추가
        excelReadOption.setStartRow(2); //시작행(헤더부분 제외)
        
        List<Map<String, String>>excelContent  = ExcelRead.read(excelReadOption);
        
        
        for(Map<String, String> article: excelContent){
            excelMapper.excelUpload(article); 
        }
    }


	@Override
	public List<ExcelVO> selectExcelList() {
		return excelMapper.selectExcelList();
	}
    
	
}
