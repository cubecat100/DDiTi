<script>
$(document).ready(function() {
 
	function priceTotal () {
		var total = 0;

		// 총 금액을 업데이트할 각 행(마지막 행은 제외)을 반복
        $('tbody tr:not(:last-child)').each(function() {
            var quantity = $(this).find('input[type="number"]').val();
            var qty = parseFloat(quantity) || 0; // 만약 수량이 숫자가 아니면 0으로 설정
            total += qty*2000;
        });
	
	 // 총 금액을 나타내는 readonly 속성의 입력 필드를 업데이트
    $('#toTalPrice').val(total);
	}
	
	// 모든 input 박스에 변경 이벤트를 연결
	$('input[type="number"]').change(function() {
	    priceTotal();
	});
	
	// "결제" 버튼에 클릭 이벤트를 연결
	$('#toTalPrice').click(function() {
	    var totalAmount = $('input[readonly="readonly"]').val();
	    console.log('총 금액:', totalAmount);
	});
 
 
});
</script>



