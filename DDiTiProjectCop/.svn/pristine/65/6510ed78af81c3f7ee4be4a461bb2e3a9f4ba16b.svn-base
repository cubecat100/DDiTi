package kr.or.ddit.service.impl;

import java.util.ArrayList;
import java.util.List;

import javax.inject.Inject;

import org.springframework.stereotype.Service;

import kr.or.ddit.mapper.IChatBotMapper;
import kr.or.ddit.service.IChatBotService;
import kr.or.ddit.vo.ChatBotVO;

@Service
public class ChatBotServiceImpl implements IChatBotService {

	@Inject
	private IChatBotMapper chatBotMapper;
	
	@Override
	public List<ChatBotVO> selectField(String key) {
		List<String> keywordList = settingMoveUrl(key);
		
		List<ChatBotVO> chatResList = new ArrayList<ChatBotVO>();
		
		for(String keyword : keywordList) {
			ChatBotVO botVO = chatBotMapper.selectField(keyword);
			chatResList.add(botVO);
		}
		
		return chatResList;
	}
	
	private List<String> settingMoveUrl(String key) {
		
		List<String> keywordList = new ArrayList<String>();
		
		/*
		 * botVO.setStt("공지사항"); 
		 * botVO.setRes("/noticeBoard.do");
		 * chatBotList.add(botVO);
		 */
		
		if(key.contains("공지")) {
			keywordList.add("공지");
		}
		if(key.contains("익명")) {
			keywordList.add("익명");
		}
		if(key.contains("메인")) {
			keywordList.add("메인");
		}
		if(key.contains("상담")) {
			keywordList.add("상담");
		}
		if(key.contains("커뮤")) {
			keywordList.add("커뮤");
		}
		if(key.contains("학사")) {
			keywordList.add("학사");
		}
		
//		if(key.contains("학사")) {
//			keywordList.add("학사");
//		}
//		if(key.contains("학사")) {
//			keywordList.add("학사");
//		}
		
		return keywordList;
	}
	

}
