								<input type="text" class="form-control" id="postCode" name="postCode">
							</div>
						</div>
						<div class="col-12">
							<div class="form-group">
								<label for="addressline1" class="form-label">Address Line 1 :</label>
								<input type="text" class="form-control" id="addressline1"> 
							</div>
						</div>
						<div class="col-12">
							<div class="form-group">
								<label for="addressline1" class="form-label">Address Line 2 :</label>
								<input type="text" class="form-control" id="addressline1"> 
							</div>
						</div>
					</div>
				</section>
				
				<!-- Step 3 -->
				<!-- <h6>입퇴사 관리</h6> -->
				<section>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<div class="row">
									<div class="col-6">
										<label for="date1" class="form-label">입사일 :</label>
										<input type="date" class="form-control" id="date1">
									</div>
									<div class="col-6">
										<label for="date1" class="form-label">퇴사일 :</label>
										<input type="date" class="form-control" id="date1">
									</div>
								</div>
							</div>
						</div>
					</div>
				</section>			
			</form>
		</div>
	  </div>
	  <div class="box">
	  </div>
	<button type="button" class="btn btn-success save-category" id="addBtn">Save</button>
	<button type="button" class="btn btn-danger" id="jhBtnClose">Close</button>
	</section>
	<!-- /.content -->
</div>

<c:if test="${not empty message }">
	<script type="text/javascript">
		alert("${message }");
		<c:remove var="message" scope="request"/>
		<c:remove var="message" scope="session"/>
	</script>
</c:if>
<script type="text/javascript">
var fSel = document.querySelector("#fSel");
var sSel = document.querySelector("#sSel");

function selDname(pThis){	
	if(pThis.value == "DPC001"){
		sSel.innerHTML = "";
		addOption(sSel, "컴퓨터공학과");
		addOption(sSel, "기계공학과");
	}
	if(pThis.value == "DPC002"){
		sSel.innerHTML = "";
		addOption(sSel, "식품영양학과");
		addOption(sSel, "행정학과");
		addOption(sSel, "사회복지학과");
	}
	if(pThis.value == "DPC003"){
		sSel.innerHTML = "";
		addOption(sSel, "ㅁㅁ학과");
		addOption(sSel, "ㅇㅇ학과");
	}
	if(pThis.value == "DPC004"){
		sSel.innerHTML = "";
		addOption(sSel, "＄학과");
		addOption(sSel, "＄학과");
	}
	if(pThis.value == "DPC005"){
		sSel.innerHTML = "";
		addOption(sSel, "ⓐⓐ학과");
		addOption(sSel, "ⓐⓐ학과");
	}
	if(pThis.value == "DPC006"){
		sSel.innerHTML = "";
		addOption(sSel, "☆학과");
		addOption(sSel, "☆학과");
	}
	if(pThis.value == "DPC007"){
		sSel.innerHTML = "";
		addOption(sSel, "★★학과");
		addOption(sSel, "★★학과");
	}
	
}

function addOption(selectElement, optionText){
	var opt = document.createElement("option");
	opt.value = optionText;
	opt.innerHTML = optionText;
	selectElement.appendChild(opt);
}
</script>

	

