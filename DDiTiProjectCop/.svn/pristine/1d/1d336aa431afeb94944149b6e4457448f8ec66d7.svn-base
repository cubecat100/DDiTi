<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!-- 학사일정 등록 BEGIN MODAL -->
<div  id="add-new-events">
	<div class="modal-content" id="mContent">
		<div class="modal-header">
			<h4 class="modal-title">
				<strong>Add</strong> schedule
			</h4>
			<button type="button" class="btn-close" onclick="mClose()" ></button>
		</div>
		<hr/>
		<form action="/employer/addSchedule.do" method="post" id="scheduleForm">
			<div class="modal-body">
				<div class="form-body">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group">
								<label class="fw-700 fs-16 form-label" for="univSchName">제목</label>${scheduleTitle }
								<input type="text" class="form-control" id="univSchName" name="univSchName">
							</div>
						</div>
					</div>
					<div class="col-md-12">
						<div class="form-group">
							<label class="fw-700 fs-16 form-label">일정 설명</label>
							<textarea class="form-control p-15" rows="4" id="scheduleCont" name="scheduleCont"></textarea>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<label class="form-label">해당 학기</label>
								<select class="form-select" id="currentSem" name="currentSem">
									<option value="none">현재학기</option>
									<option value="#학기">2023년 2학기</option>
									<option value="#학기">2023년 1학기</option>
								</select>
							</div>
						</div>
					</div>
					<br/>
					<div class="row">
						<div class="form-group row">
							<label class="col-form-label col-md-2">시작일자</label>
							<div class="col-md-10">
								<input class="form-control" type="date" name="month" id="univSchStartDate" name="univSchStartDate" value=''>
							</div>
							<label class="col-form-label col-md-2">종료일자</label>
							<div class="col-md-10">
								<input class="form-control" type="date" name="month" id="univSchEndDate" name="univSchEndDate">
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-success save-category" id="addBtn">Save</button>
				<button type="button" class="btn btn-danger" id="jhBtnClose">Close</button>
			</div>
<!-- 				<input type="hidden" name="univSchReg" id="univSchReg" /> -->
		</form>
	</div>
</div>
<!-- END MODAL -->
