	// 교수 계정 생성
	@GetMapping("/employer/createProID.do")
	public String createProID(Model model, MemberVO memberVO, RedirectAttributes ra, HttpServletRequest req) {
		String goPage = "";
		
		// 에러 등록
		Map<String, String> errors = new HashMap<String, String>();
		if(StringUtils.isBlank(memberVO.getMemName()))
		{
			errors.put("memName", "이름을 입력해주세요.");
		}
		if(errors.size()>0)
		{
			model.addAttribute("errors", errors);
			model.addAttribute("memberVO", memberVO);
			goPage = "employer/proList";
		}
		// 정상 등록
		else
		{
		
			ServiceResult result = memberService.createProID(req, memberVO);
			if(result.equals(ServiceResult.OK))
			{
				ra.addFlashAttribute("message", "교수 아이디가 생성되었습니다.");
				goPage = "redirect:/proList.do";
			}else
			{
				model.addAttribute("scheduleVO", memberVO);
				model.addAttribute("message", "교수 아이디 등록 실패, 다시 시도해주세요!");
				goPage = "employer/proList";
			}
		}
		return "employer/createProID";
	}

