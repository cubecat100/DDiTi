<script>
	const gsBtn = document.querySelector("#gsBtn");
	const gsBtnSpan = document.querySelector("#gsBtnSpan");
	
 	let calWidget = document.querySelector("#calWidget");
 	let todoWidget = document.querySelector("#todoWidget");
 	let acadWidget = document.querySelector("#acadWidget");
 	let scheduleWidget  = document.querySelector("#scheduleWidget "); 
	
	let clickFlag = true;

	gsBtn.addEventListener("click", function() {
		if (clickFlag) {
			gsBtnSpan.innerHTML = "화면 구성 설정";
			/* f_grisStack(); */
		} else {
			gsBtnSpan.innerHTML = "화면 구성 완료";
		}
		clickFlag = !clickFlag;
	});

   	let items = [
	    { x: 0, y: 0, w: 6, h: 6, content : calWidget },
	    { x: 6, y: 0, w: 4, h: 2, content : todoWidget },
	    { x: 6, y: 2, w: 6, h: 4, content : acadWidget },
	    { x: 0, y: 6, w: 6, h: 4, content : scheduleWidget }
	];  
	
	//확장 (jQuery Plugin 느낌!)
	GridStack.prototype.e7eMerong = function () {
	    console.log("GridStack", this);
	}
	
	/* 공통으로 들어가는 옵션 */
	let defaultGridOption = {
	    //column: 6,                   // default 12
	    //oneColumnSize: 100,          // default 768
	    minRow: 1,
	    disableOneColumnMode: true,
	    margin: '1em',
	    placeholderClass: 'grid-stack-placeholder',
	    placeholderText:'',
	    disableResize: true,
	    float: true,
	    animate:true,
	    //removable: false,    //body로 설정하면 구성화면 밖으로 던지면 삭제됨
	    //cellHeight: 50,
	    //cellWidth: 50,
	    // 한줄 혼자 꽉 채우는 거 금지!,default value of oneColumnSize is 768px
	    disableOneColumnMode: true,
	    resizable: { handles: 'e,se,s,sw,w' }
	}
	
    let gridOptions = {
        calWidget: calWidgetOption,
        todoWidget: todoWidgetOption,
        acadWidget: acadWidgetOption,
        scheduleWidget: scheduleWidgetOption
    };

    // 각 위젯에 대해 설정을 적용하고 초기화
    for (let widgetId in gridOptions) {
        let widgetGridOption = gridOptions[widgetId];
        widgetGridOption = Object.assign(widgetGridOption, { removable: '#' + widgetId });

        let grid = GridStack.init(widgetGridOption);
        grid.load(items[widgetId]);
        
        console.log("widgetGridOption", widgetGridOption);
    }
	
	/* console.log("widgetGridOption", widgetGridOption); */
	/* console.log("gridOption", gridOption); */

	// const grid = GridStack.init(); // 옵션 없이 생성(Default)
	// let grid = GridStack.init(gridOption);
	
	function f_loadGrid(){
	    grid.load(items);
	    grid.e7eMerong();
	}

	f_loadGrid();
	// 컴팩트
	function fcompact() {
	    grid.compact();
	}

	function f_addObj(){
	    var grid_x = document.querySelector("#grid_x").value;
	    var grid_y = document.querySelector("#grid_y").value;

	    grid.addWidget({ w: grid_x, h: grid_y, content: "add obj" });
	}

	console.log("postion", grid.engine.nodes);

	//현재설정 저장하기
	function f_postionSave(){
	    console.log("position save...");
	    var items = [];

	    var itemList = grid.engine.nodes;

	    for(var i=0; i<itemList.length; i++){
	        var item = {};
	        item.x = itemList[i].x;
	        item.y = itemList[i].y;
	        item.w = itemList[i].w;
	        item.h = itemList[i].h;
	        item.content = itemList[i].content;

	        items.push(item);
	    }

	    console.log(items);

	    //스트링 형태로 저장
	    localStorage.setItem("items", JSON.stringify(items));
	}

	//모두 삭제
	function f_removeAll(){
	    grid.removeAll();
	}

	//요소 삭제
	function f_removeWidget(el){
	    //console.log(el);
	    grid.removeWidget(el, false);
	    el.remove();
	}

	//불러오기
	function f_postionLoad(){
	    //스트링 변환
	    var items = JSON.parse(localStorage.getItem("items"));

	    if(items == null || items == ""){
	        console.log("position empty...")
	        return;
	    }

	    f_removeAll();
	    grid.load(items);
	    console.log(items);
	}
	
	function f_postion(){
	    console.log(grid.engine.nodes);
	}
	function f_addWidget(){
		grid.addWidget({ w: 1, h: 1, content: "<h1>test</h1> test" });
	}
	
	
	
</script>
