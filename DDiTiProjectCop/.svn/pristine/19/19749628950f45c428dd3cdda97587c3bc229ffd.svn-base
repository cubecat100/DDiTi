<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.IClassManagementMapper">
	
	<select id="progressClassList" parameterType="int" resultType="ClassVO">
		SELECT
			class_no
			, lec_no
			, mem_no
			, room_no
			, value_type
			, class_name
			, lec_point
			, semester
			, class_req_code
			, class_max_mem
			, class_total_time
			, exam_proprion
			, hw_propotion
			, at_propotion
			, class_status_code
			, class_week_cnt
			, class_note
			, class_reject
			, file_no
		FROM class
		WHERE 
			mem_no = #{memNo}
			and (
					CLASS_STATUS_CODE = 'CLS001'
					or CLASS_STATUS_CODE = 'CLS003'
					or CLASS_STATUS_CODE = 'CLS004' 
					or CLASS_STATUS_CODE = 'CLS005' 
					or CLASS_STATUS_CODE = 'CLS007' 
				)
	</select>
	
	<insert id="addClassBrd" parameterType="ClassBoardVO">
		insert into class_board (
			class_brd_no
			, class_no
			, class_brd_title
			, class_brd_cont
			, class_write_date
			, class_brd_hit_count
			, file_no
		) values(
			class_board_seq.nextval
			, #{classNo}
			, #{classBrdTitle}
			, #{classBrdCont}
			, sysDate
			, 0
			, #{fileNo}
		)
	</insert>
	
</mapper>